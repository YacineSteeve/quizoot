{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "module": "commonJS",
        "moduleResolution": "node",
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
        ],
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "ts-node": {
        "transpileOnly": true,
        "swc": true,
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
